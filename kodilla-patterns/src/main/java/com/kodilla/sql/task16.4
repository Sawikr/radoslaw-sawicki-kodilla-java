SELECT I.DESCRIPTION, P.NAME
FROM issues I
JOIN ISSUESLISTS P ON I.ISSUESLISTS_ID = P.ID;

SELECT I.DESCRIPTION, P.NAME
FROM issues I
JOIN users P ON I.ISSUESLISTS_ID = P.ID;

SELECT P.NAME, I.DESCRIPTION, COUNT(*) AS ISSUES_NUMBER
FROM issues I
JOIN users P ON I.ISSUESLISTS_ID = P.ID
GROUP BY P.NAME;